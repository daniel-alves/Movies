@model Movies.App.Models.Movies.MovieViewModel

@{ ViewData["Title"] = "Excluir"; }

<h2>Excluir filme</h2>
<hr />
@if (Model.CanDelete)
{
    <div class="alert alert-warning" role="alert">
        <strong>Tem certeza que deseja excluir este filme?</strong>
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        <strong> Não é possível excluir este filme, ele está sendo utilizado em algumas locações.</strong>
    </div>
}

<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Active)
        </dd>
    </dl>

    @if (Model.CanDelete)
    {
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            <a asp-action="Index">Voltar para a listagem</a>
        </form>
    }

</div>
