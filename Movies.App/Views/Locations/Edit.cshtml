@model Movies.App.Models.Locations.LocationViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Location</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
