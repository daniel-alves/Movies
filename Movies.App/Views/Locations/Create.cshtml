@model Movies.Domain.Entities.Location

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Location</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Movies" class="control-label"></label>
                <select name="Movies" class="form-control movie-list" multiple></select>
                <span asp-validation-for="Movies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @*<script src="@Url.Content("~/Scripts/jqueryFoo.js")"></script>*@

    <script>
        $('.movie-list').select2({
            minimumInputLength: 5,
            ajax: {
                url: '/Movies/SelectList',
                dataType: 'json',
                processResults: function (data) {
                    console.log(data);
                    return {
                        results: data
                    };
                }
            }
        })
    </script>
}

